<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ðŸ’– A Special Question For You</title>
    
    <style>
        /* ========== IMPORTS ========== */
        @import url('https://fonts.googleapis.com/css2?family=Pacifico&family=Quicksand:wght@400;600;700&display=swap');
        
        /* ========== CSS VARIABLES ========== */
        :root {
            --pink-light: #FFE5EC;
            --pink-medium: #FFB3C6;
            --pink-bright: #FF69B4;
            --pink-deep: #FF1493;
            --rose: #FFC0CB;
            --lavender: #E6E6FA;
            --white: #FFFFFF;
            --purple-soft: #DDA0DD;
            --green-yes: #90EE90;
            --red-no: #FFB6C1;
            
            --shadow-soft: 0 10px 40px rgba(255, 105, 180, 0.3);
            --shadow-glow: 0 0 30px rgba(255, 105, 180, 0.6);
        }
        
        /* ========== RESET & BASE STYLES ========== */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Quicksand', sans-serif;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background: linear-gradient(135deg, #FFE5EC 0%, #FFC0CB 25%, #E6E6FA 50%, #FFB3C6 75%, #FFE5EC 100%);
            background-size: 400% 400%;
            animation: gradientShift 15s ease infinite;
            overflow: hidden;
            position: relative;
        }
        
        @keyframes gradientShift {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }
        
        /* ========== FLOATING HEARTS BACKGROUND ========== */
        .hearts-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 1;
            overflow: hidden;
        }
        
        .heart-float {
            position: absolute;
            font-size: 20px;
            opacity: 0;
            animation: floatUp 6s ease-in infinite;
        }
        
        @keyframes floatUp {
            0% {
                opacity: 0;
                transform: translateY(0) rotate(0deg);
            }
            10% {
                opacity: 0.8;
            }
            90% {
                opacity: 0.8;
            }
            100% {
                opacity: 0;
                transform: translateY(-100vh) rotate(360deg);
            }
        }
        
        /* ========== MAIN CARD ========== */
        .card {
            position: relative;
            z-index: 10;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 40px;
            padding: 60px 50px;
            max-width: 600px;
            width: 90%;
            box-shadow: var(--shadow-soft);
            text-align: center;
            border: 3px solid var(--pink-medium);
            animation: cardEntrance 0.8s cubic-bezier(0.34, 1.56, 0.64, 1);
        }
        
        @keyframes cardEntrance {
            0% {
                opacity: 0;
                transform: scale(0.8) translateY(30px);
            }
            100% {
                opacity: 1;
                transform: scale(1) translateY(0);
            }
        }
        
        /* ========== TYPOGRAPHY ========== */
        h1 {
            font-family: 'Pacifico', cursive;
            font-size: 3rem;
            color: var(--pink-deep);
            margin-bottom: 20px;
            text-shadow: 2px 2px 4px rgba(255, 105, 180, 0.3);
            animation: heartbeat 2s ease-in-out infinite;
        }
        
        @keyframes heartbeat {
            0%, 100% { transform: scale(1); }
            10%, 30% { transform: scale(1.05); }
            20% { transform: scale(1.02); }
        }
        
        .subtitle {
            font-size: 1.2rem;
            color: var(--purple-soft);
            margin-bottom: 40px;
            font-weight: 600;
        }
        
        /* ========== BUTTONS CONTAINER ========== */
        .buttons {
            display: flex;
            gap: 30px;
            justify-content: center;
            align-items: center;
            flex-wrap: wrap;
            margin-top: 30px;
            min-height: 80px;
        }
        
        /* ========== BUTTON STYLES ========== */
        button {
            font-family: 'Quicksand', sans-serif;
            font-size: 1.5rem;
            font-weight: 700;
            padding: 18px 50px;
            border: none;
            border-radius: 50px;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
            position: relative;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }
        
        button:active {
            transform: scale(0.95);
        }
        
        /* YES Button */
        #yesBtn {
            background: linear-gradient(135deg, var(--green-yes) 0%, var(--pink-bright) 100%);
            color: white;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
        }
        
        #yesBtn:hover {
            transform: scale(1.1);
            box-shadow: var(--shadow-glow);
            animation: wiggle 0.5s ease;
        }
        
        @keyframes wiggle {
            0%, 100% { transform: rotate(0deg) scale(1.1); }
            25% { transform: rotate(-5deg) scale(1.1); }
            75% { transform: rotate(5deg) scale(1.1); }
        }
        
        /* NO Button - The Playful One */
        #noBtn {
            background: linear-gradient(135deg, var(--red-no) 0%, var(--pink-medium) 100%);
            color: white;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
            position: absolute;
            transition: all 0.2s ease;
        }
        
        /* ========== TEASING TEXT ========== */
        .tease-text {
            position: fixed;
            font-size: 1.2rem;
            font-weight: 600;
            color: var(--pink-deep);
            opacity: 0;
            pointer-events: none;
            z-index: 100;
            text-shadow: 1px 1px 3px rgba(255, 255, 255, 0.8);
            animation: fadeInOut 2s ease;
        }
        
        @keyframes fadeInOut {
            0%, 100% { opacity: 0; transform: translateY(0); }
            50% { opacity: 1; transform: translateY(-10px); }
        }
        
        /* ========== SUCCESS STATE ========== */
        .success-message {
            display: none;
            font-family: 'Pacifico', cursive;
            font-size: 2rem;
            color: var(--pink-deep);
            margin-top: 30px;
            animation: bounceIn 0.8s cubic-bezier(0.34, 1.56, 0.64, 1);
        }
        
        @keyframes bounceIn {
            0% {
                opacity: 0;
                transform: scale(0);
            }
            60% {
                opacity: 1;
                transform: scale(1.1);
            }
            100% {
                transform: scale(1);
            }
        }
        
        .celebration {
            display: none;
            font-size: 4rem;
            margin-top: 20px;
            animation: celebration 1s ease infinite;
        }
        
        @keyframes celebration {
            0%, 100% { transform: rotate(-10deg); }
            50% { transform: rotate(10deg); }
        }
        
        /* ========== CONFETTI ========== */
        .confetti {
            position: fixed;
            width: 10px;
            height: 10px;
            background: var(--pink-bright);
            position: absolute;
            animation: confettiFall 3s linear;
        }
        
        @keyframes confettiFall {
            0% {
                transform: translateY(0) rotate(0deg);
                opacity: 1;
            }
            100% {
                transform: translateY(100vh) rotate(720deg);
                opacity: 0;
            }
        }
        
        /* ========== MUSIC TOGGLE ========== */
        .music-toggle {
            position: fixed;
            top: 20px;
            right: 20px;
            background: rgba(255, 255, 255, 0.9);
            border: 2px solid var(--pink-medium);
            border-radius: 50%;
            width: 60px;
            height: 60px;
            font-size: 1.8rem;
            cursor: pointer;
            z-index: 100;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .music-toggle:hover {
            transform: scale(1.1);
            box-shadow: var(--shadow-glow);
        }
        
        .music-toggle.playing {
            animation: spin 2s linear infinite;
        }
        
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        
        /* ========== SUCCESS BACKGROUND ========== */
        body.success {
            background: linear-gradient(135deg, #FFB3C6 0%, #FF69B4 25%, #FFE5EC 50%, #FF1493 75%, #FFB3C6 100%);
            background-size: 400% 400%;
        }
        
        /* ========== RESPONSIVE ========== */
        @media (max-width: 600px) {
            h1 {
                font-size: 2rem;
            }
            
            .card {
                padding: 40px 30px;
            }
            
            button {
                font-size: 1.2rem;
                padding: 15px 35px;
            }
            
            .success-message {
                font-size: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <!-- Floating Hearts Background -->
    <div class="hearts-container" id="heartsContainer"></div>
    
    <!-- Music Toggle -->
    <button class="music-toggle" id="musicToggle" title="Toggle music">ðŸŽµ</button>
    
    <!-- Main Card -->
    <div class="card">
        <h1>Can you be my girlfriend? ðŸ’–</h1>
        <p class="subtitle">I promise to make you smile every day! ðŸ¥°</p>
        
        <div class="buttons" id="buttonsContainer">
            <button id="yesBtn">YES ðŸ’•</button>
            <button id="noBtn">NO ðŸ’”</button>
        </div>
        
        <div class="success-message" id="successMessage">
            Yayyy! You made me the happiest person alive! ðŸ’–ðŸ¥°
        </div>
        
        <div class="celebration" id="celebration">
            ðŸŽ‰ðŸ’–âœ¨ðŸ¥³ðŸ’•
        </div>
    </div>
    
    <!-- Hidden Audio Element -->
    <audio id="bgMusic" loop>
        <!-- Using a romantic royalty-free music data URI would go here -->
        <!-- For demonstration, we'll use Web Audio API to create simple tones -->
    </audio>
    
    <script>
        // ========== CONSTANTS & VARIABLES ==========
        const yesBtn = document.getElementById('yesBtn');
        const noBtn = document.getElementById('noBtn');
        const buttonsContainer = document.getElementById('buttonsContainer');
        const successMessage = document.getElementById('successMessage');
        const celebration = document.getElementById('celebration');
        const musicToggle = document.getElementById('musicToggle');
        const heartsContainer = document.getElementById('heartsContainer');
        
        let noBtnScale = 1;
        let escapeCount = 0;
        let musicPlaying = false;
        let audioContext;
        
        // Teasing messages for NO button
        const teaseMessages = [
            "Hey! Why no? ðŸ˜­",
            "Please reconsider ðŸ¥º",
            "Don't break my heart ðŸ’”",
            "Are you sure? ðŸ˜¢",
            "Give me a chance! ðŸ™",
            "Pretty please? ðŸ¥ºðŸ’•",
            "I'll be good, I promise! ðŸ˜‡",
            "Just one yes? ðŸŒŸ"
        ];
        
        // ========== FLOATING HEARTS BACKGROUND ==========
        function createFloatingHeart() {
            const heart = document.createElement('div');
            heart.className = 'heart-float';
            heart.textContent = ['ðŸ’–', 'ðŸ’•', 'ðŸ’—', 'ðŸ’“', 'ðŸ’'][Math.floor(Math.random() * 5)];
            heart.style.left = Math.random() * 100 + '%';
            heart.style.fontSize = (Math.random() * 20 + 15) + 'px';
            heart.style.animationDuration = (Math.random() * 3 + 4) + 's';
            heart.style.animationDelay = Math.random() * 2 + 's';
            
            heartsContainer.appendChild(heart);
            
            // Remove after animation
            setTimeout(() => heart.remove(), 8000);
        }
        
        // Create hearts periodically
        setInterval(createFloatingHeart, 500);
        
        // ========== NO BUTTON ESCAPE LOGIC ==========
        function moveNoButton() {
            const card = document.querySelector('.card');
            const cardRect = card.getBoundingClientRect();
            
            // Calculate random position within viewport
            const maxX = window.innerWidth - noBtn.offsetWidth - 40;
            const maxY = window.innerHeight - noBtn.offsetHeight - 40;
            
            const randomX = Math.random() * maxX + 20;
            const randomY = Math.random() * maxY + 20;
            
            // Apply position
            noBtn.style.left = randomX + 'px';
            noBtn.style.top = randomY + 'px';
            
            // Shrink and rotate
            noBtnScale *= 0.85;
            const rotation = (Math.random() - 0.5) * 30;
            noBtn.style.transform = `scale(${noBtnScale}) rotate(${rotation}deg)`;
            
            // Show teasing message
            showTeaseMessage(randomX, randomY);
            
            escapeCount++;
        }
        
        function showTeaseMessage(x, y, customMessage = null) {
            const message = document.createElement('div');
            message.className = 'tease-text';
            message.textContent = customMessage || teaseMessages[escapeCount % teaseMessages.length];
            message.style.left = x + 'px';
            message.style.top = (y - 50) + 'px';
            
            document.body.appendChild(message);
            
            setTimeout(() => message.remove(), 2000);
        }
        
        // ========== NO BUTTON HOVER DETECTION ==========
        // Track mouse position
        let mouseX = 0;
        let mouseY = 0;
        
        document.addEventListener('mousemove', (e) => {
            mouseX = e.clientX;
            mouseY = e.clientY;
            
            // Check distance to NO button
            if (noBtn.style.display !== 'none') {
                const btnRect = noBtn.getBoundingClientRect();
                const btnCenterX = btnRect.left + btnRect.width / 2;
                const btnCenterY = btnRect.top + btnRect.height / 2;
                
                const distance = Math.sqrt(
                    Math.pow(mouseX - btnCenterX, 2) + 
                    Math.pow(mouseY - btnCenterY, 2)
                );
                
                // Escape when mouse gets within 100px
                if (distance < 100) {
                    moveNoButton();
                }
            }
        });
        
        // Also try to escape on hover and click
        noBtn.addEventListener('mouseenter', moveNoButton);
        noBtn.addEventListener('click', (e) => {
            e.preventDefault();
            moveNoButton();
        });
        
        // Touch support for mobile
        noBtn.addEventListener('touchstart', (e) => {
            e.preventDefault();
            moveNoButton();
        });
        
        // ========== YES BUTTON SUCCESS ==========
        function celebrate() {
            // Hide buttons
            yesBtn.style.display = 'none';
            noBtn.style.display = 'none';
            
            // Show success message
            successMessage.style.display = 'block';
            celebration.style.display = 'block';
            
            // Change background
            document.body.classList.add('success');
            
            // Create confetti
            createConfetti();
            
            // Create more hearts
            for (let i = 0; i < 50; i++) {
                setTimeout(createFloatingHeart, i * 100);
            }
        }
        
        function createConfetti() {
            const colors = ['#FFB3C6', '#FF69B4', '#E6E6FA', '#90EE90', '#FFD700', '#FF1493'];
            
            for (let i = 0; i < 100; i++) {
                setTimeout(() => {
                    const confetti = document.createElement('div');
                    confetti.className = 'confetti';
                    confetti.style.left = Math.random() * 100 + '%';
                    confetti.style.top = '-10px';
                    confetti.style.background = colors[Math.floor(Math.random() * colors.length)];
                    confetti.style.width = (Math.random() * 10 + 5) + 'px';
                    confetti.style.height = (Math.random() * 10 + 5) + 'px';
                    confetti.style.borderRadius = Math.random() > 0.5 ? '50%' : '0';
                    
                    document.body.appendChild(confetti);
                    
                    setTimeout(() => confetti.remove(), 3000);
                }, i * 30);
            }
        }
        
        yesBtn.addEventListener('click', celebrate);
        
        // ========== MUSIC TOGGLE ==========
        function initAudio() {
            // Create a simple romantic melody using Web Audio API
            audioContext = new (window.AudioContext || window.webkitAudioContext)();
        }
        
        function playRomanticTone() {
            if (!audioContext) initAudio();
            
            // Simple romantic melody pattern
            const notes = [
                { freq: 523.25, duration: 0.3 }, // C5
                { freq: 587.33, duration: 0.3 }, // D5
                { freq: 659.25, duration: 0.3 }, // E5
                { freq: 783.99, duration: 0.6 }, // G5
                { freq: 659.25, duration: 0.3 }, // E5
                { freq: 587.33, duration: 0.3 }, // D5
                { freq: 523.25, duration: 0.6 }, // C5
            ];
            
            let time = audioContext.currentTime;
            
            notes.forEach(note => {
                const oscillator = audioContext.createOscillator();
                const gainNode = audioContext.createGain();
                
                oscillator.connect(gainNode);
                gainNode.connect(audioContext.destination);
                
                oscillator.frequency.value = note.freq;
                oscillator.type = 'sine';
                
                gainNode.gain.setValueAtTime(0.1, time);
                gainNode.gain.exponentialRampToValueAtTime(0.01, time + note.duration);
                
                oscillator.start(time);
                oscillator.stop(time + note.duration);
                
                time += note.duration;
            });
        }
        
        let musicInterval;
        
        musicToggle.addEventListener('click', () => {
            musicPlaying = !musicPlaying;
            
            if (musicPlaying) {
                musicToggle.classList.add('playing');
                playRomanticTone();
                musicInterval = setInterval(playRomanticTone, 3000);
            } else {
                musicToggle.classList.remove('playing');
                clearInterval(musicInterval);
            }
        });
        
        // ========== INITIALIZE ==========
        // Position NO button initially
        window.addEventListener('load', () => {
            // Create initial floating hearts
            for (let i = 0; i < 10; i++) {
                setTimeout(createFloatingHeart, i * 200);
            }
        });
    </script>
</body>
</html>
